{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "rootDir": ".",
        "outDir": "lib",
        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "preserveConstEnums": true,
        "importHelpers": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "noUnusedLocals": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["src"]
}
